# $Id: Makefile.win,v 1.1 2006/12/04 15:28:53 mascarenhas Exp $

T= lfs
V= 1.2.1
CONFIG= ./config.win

include $(CONFIG)

SRCS= src/$T.c
OBJS= src/$T.obj

lib: src/$(LIBNAME)

src/$(LIBNAME): $(OBJS)
	link /dll /out:src/$(LIBNAME) $(OBJS) $(LUA_LIB)

install: src/$(LIBNAME)
	mkdir -p $(LUA_LIBDIR)
	copy src/$(LIBNAME) $(LUA_LIBDIR)

clean:
	del src/$(LIBNAME) $(OBJS)
